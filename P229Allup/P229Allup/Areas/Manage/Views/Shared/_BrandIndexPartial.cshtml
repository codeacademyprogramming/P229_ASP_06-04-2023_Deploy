@model IEnumerable<Brand>
@{
    int count = 0;
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Created By</th>
            <th>Product Count</th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Brand brand in Model)
        {
            count++;

            <tr>
                <td>@count</td>
                <td>@brand.Name</td>
                <td>@brand.CreatedAt?.ToString("dd-MMM-yyyy").ToUpper()</td>
                <td>@brand.CreatedBy</td>
                <td>@brand.Products?.Count()</td>
                <td>
                    <a asp-area="manage" asp-controller="brand" asp-action="Detail" asp-route-id="@brand.Id" class="btn btn-primary">Detail</a>
                    <a asp-area="manage" asp-controller="brand" asp-action="Update" asp-route-id="@brand.Id" class="btn btn-warning">Update</a>
                    <a asp-area="manage" asp-controller="brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger deleteBtn">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>