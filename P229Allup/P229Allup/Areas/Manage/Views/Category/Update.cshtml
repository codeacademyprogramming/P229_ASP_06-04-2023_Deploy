@model Category

@{
    ViewData["Title"] = "Update";
    IEnumerable<Category> categories = ViewBag.MainCategories;

    SelectList selectLists = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Category Update Page</h1>
            </div>
        </div>

    </div>
    <div class="col-lg-12">
        <form method="post" enctype="multipart/form-data">
            @*<div class="form-check d-none">
                <input asp-for="IsMain" class="form-check-input">
                <label asp-for="IsMain" class="form-check-label"></label>
                <span asp-validation-for="IsMain" class="text text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text text-danger"></span>
            </div>
            <div class="form-group fileInput">
                <label asp-for="File"></label>
                <input asp-for="File" accept="image/jpeg" class="form-control-file">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
            <div class="form-group parentInput">
                <label asp-for=ParentId></label>
                <select asp-for=ParentId class="form-control" asp-items="@selectLists">
                    @*@foreach (var item in ViewBag.MainCategories)
                    {
                    <option value="@item.Id">@item.Name</option>
                    }*@

                    @*@foreach (Category category in categories)
                    {
                    <option value="@category.Id">@category.Name</option>
                    }*@
                </select>
                <span asp-validation-for="ParentId" class="text text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    let isMain = @Model.IsMain.ToString().ToLower();
    if (isMain) {
        document.querySelector('.fileInput').classList.remove('d-none')
        document.querySelector('.parentInput').classList.add('d-none')
    } else {
        document.querySelector('.fileInput').classList.add('d-none')
        document.querySelector('.parentInput').classList.remove('d-none')
    }
</script>

