@model PageNatedList<UserVM>
@{
    ViewData["Title"] = "Index";
    int count = (Model.PageIndex - 1) * 3;
}
<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Category Page</h1>
            </div>
            <div class="col-lg-2" style="text-align:end;">
                <a asp-area="manage" asp-controller="Category" asp-action="create" class="btn btn-primary">Create</a>
            </div>
        </div>

    </div>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Name</th>
                    <th>SurName</th>
                    <th>Email</th>
                    <th>UserName</th>
                    <th>Role</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserVM userVM in Model)
                {
                    count++;

                    <tr>
                        <td>@count</td>
                        <td>@userVM.Name</td>
                        <td>@userVM.SurName</td>
                        <td>@userVM.Email</td>
                        <td>@userVM.UserName</td>
                        <td>@userVM.Role</td>
                        <td>
                            <a asp-area="manage" asp-controller="User" asp-action="Detail" asp-route-id="@userVM.Id" class="btn btn-primary">Detail</a>
                            <a asp-area="manage" asp-controller="User" asp-action="ChangeRole" asp-route-id="@userVM.Id" class="btn btn-warning">Change Role</a>
                            <a asp-area="manage" asp-controller="User" asp-action="ResetPassword" asp-route-id="@userVM.Id" class="btn btn-danger">Reset Password</a>
                            <a asp-area="manage" asp-controller="User" asp-action="ChangeStatus" asp-route-id="@userVM.Id" asp-route-isActive="@(!userVM.IsActive)" class="btn btn-danger">@(userVM.IsActive ? "DeAktive Et":"Aktive Et")</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class=" col-lg-12">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.HasPrev)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="manage" asp-controller="User" asp-action="index"
                       asp-route-pageIndex="@(Model.PageIndex -1)">Previous</a>
                    </li>
                }

                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active":"")">
                        <a class="page-link" asp-area="manage" asp-controller="User"
                       asp-action="index" asp-route-pageIndex="@i">@i</a>
                    </li>

                }

                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a class="page-link" asp-area="manage" asp-controller="User" asp-action="index"
                       asp-route-pageIndex="@(Model.PageIndex +1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>