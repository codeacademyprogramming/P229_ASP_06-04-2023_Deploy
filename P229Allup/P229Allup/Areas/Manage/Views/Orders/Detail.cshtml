@model Order
@{
    ViewData["Title"] = "Detail";
    int count = 0;
    int childCount = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="row justify-content-lg-between">
            <div class="col-lg-3">
                <h1 class="h3 mb-4 text-gray-800">Brand Page</h1>
            </div>
            <div class="col-lg-3">
                <a asp-area="manage" asp-controller="Orders" asp-action="index" class="btn btn-primary">Got To Home</a>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Order No: @Model.No</h5>
                <h5 class="card-title">Full Name: @($"{Model.Name} {Model.SurName}")</h5>
            </div>
        </div>
    </div>
    @if (Model.OrderItems != null && Model.OrderItems.Count() > 0)
    {
        <div class="col-lg-12">
            <h4>Children Categories</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Count</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OrderItem orderItem in Model.OrderItems)
                    {
                        childCount++;

                        <tr>
                            <td>@childCount</td>
                            <td>@orderItem.Product.Title</td>
                            <td>@orderItem.Price</td>
                            <td>@orderItem.Count</td>
                            <td>@(orderItem.Price * orderItem.Count)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    <div class="col-lg-2">
        <form method="post" asp-area="manage" asp-controller="orders" asp-action="ChangeOrder" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Comment"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Status></label>
                <select asp-for=Status class="form-control" asp-items="@Html.GetEnumSelectList<OrderType>()">
                    @*@foreach (var item in Enum.GetValues(typeof(OrderType)))
                    {
                        <option value="@((int)item)">@item</option>
                    }*@
                </select>
                <span asp-validation-for="Status" class="text text-danger"></span>
            </div>
            <button type="submit">Change Order</button>
        </form>
    </div>
</div>