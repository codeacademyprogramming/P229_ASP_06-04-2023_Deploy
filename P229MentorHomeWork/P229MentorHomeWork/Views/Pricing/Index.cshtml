@model PricingVM
@{
    ViewData["Title"] = "Index";
    int index = 0;
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Pricing</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
        <div class="container" data-aos="fade-up">

            <div class="row">

                @foreach (Pricing pricing in Model.Pricings)
                {
                    <div class="col-lg-3 col-md-6 @(index > 0 ? " mt-4 mt-md-0":"")">
                        <div class="box @(pricing.IsFeatured ? "featured" : "")">
                            @if (pricing.IsActivated)
                            {
                                <span class="advanced">Advanced</span>
                            }
                            <h3>@pricing.Name</h3>
                            <h4><sup>$</sup>@pricing.Price<span> / month</span></h4>
                            <ul>
                                @foreach (Offer offer in Model.Offers)
                                {
                                    <li class="@(pricing.PricingOffers.Any(po=>po.OfferId == offer.Id) ? "":"na")">@offer.Name</li>
                                }
                            </ul>
                            <div class="btn-wrap">
                                <a href="#" class="btn-buy">Buy Now</a>
                            </div>
                        </div>
                    </div>

                    index++;
                }

                

            </div>

        </div>
    </section><!-- End Pricing Section -->

</main><!-- End #main -->